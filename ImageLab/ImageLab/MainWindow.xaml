<Window x:Class="ImageLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:models="clr-namespace:ImageLab.Models"
        xmlns:enums="clr-namespace:ImageLab.Enumerations"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" >

    <Window.Resources>
        <ResourceDictionary Source=".\Resources\Styles.xaml"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Options" Style="{StaticResource ButtonStyle}"
                    Command="{Binding SelectOptionCommand}"/>
            
            <ComboBox Name="cb" Grid.Column="1" Style="{StaticResource ComboBoxStyle}"
                      ItemsSource="{Binding ConvertableFormatsList}"
                      IsSynchronizedWithCurrentItem="True"/>

            <Button Grid.Column="2" Content="Convert" Style="{StaticResource ButtonStyle}"
                    Command="{Binding ConvertImageCommand}"
                    CommandParameter="{Binding SelectedItem, ElementName=cb}"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="38*"/>
                <ColumnDefinition Width="53*"/>
                <ColumnDefinition Width="23*"/>
                <ColumnDefinition Width="76*"/>
            </Grid.ColumnDefinitions>

            <TreeView Grid.Column="0" SelectedItemChanged="TreeView_SelectedItemChanged" ItemsSource="{Binding RootItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <!--<i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectedItemChanged">
                        <i:InvokeCommandAction Command="{Binding SelectedItemChangedCommand}" CommandParameter="{B}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>-->
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type models:TreeNode}" ItemsSource="{Binding Items}">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Command="{Binding DataContext.CheckBoxCheckedCommand, RelativeSource={RelativeSource FindAncestor, AncestorType = Window}}"
                                      IsChecked="{Binding IsVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>

            <ListView Grid.Column="1" ItemsSource="{Binding ListViewItems, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="2">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header = "BMP" DisplayMemberBinding = "{Binding BmpDetails}"/>
                        <GridViewColumn Header = "PNG" DisplayMemberBinding = "{Binding PngDetails}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Grid.Column="3" Orientation="Vertical">
                <Image Source="{Binding  SelectedImage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

        </Grid>

    </Grid>

</Window>
